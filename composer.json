{
    "name": "team-nifty-gmbh/flux-erp",
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "beyondcode/laravel-websockets": "^1.13.2",
        "laravel/fortify": "^1.13",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.0",
        "laravel/scout": "^10.0",
        "livewire/livewire": "^2.10",
        "pusher/pusher-php-server": "^7.0.2",
        "spatie/laravel-activitylog": "^4.6",
        "spatie/laravel-medialibrary": "^10.0",
        "spatie/laravel-model-info": "^1.4",
        "spatie/laravel-model-states": "^2.4",
        "spatie/laravel-permission": "^5.5",
        "spatie/laravel-query-builder": "^5.0",
        "spatie/laravel-tags": "^4.3",
        "spatie/laravel-translatable": "^6.0",
        "spatie/laravel-translation-loader": "^2.7",
        "team-nifty-gmbh/tall-calendar": "^0.0.1",
        "team-nifty-gmbh/tall-datatables": "^0.4.0",
        "wireui/heroicons": "^2.3",
        "wireui/wireui": "^1.12"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "brianium/paratest": "^7.0",
        "friendsofphp/php-cs-fixer": "^v3.6",
        "laravel/pint": "^1.1",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.6",
        "vlucas/phpdotenv": "^5.5"
    },
    "suggest": {
        "beyondcode/laravel-query-detector": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "files": [
            "helpers.php",
            "src/frontend-helpers.php"
        ],
        "psr-4": {
            "FluxErp\\": "src/",
            "FluxErp\\Database\\Seeders\\": "database/seeders/",
            "FluxErp\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FluxErp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FluxErp\\FluxServiceProvider",
                "FluxErp\\Providers\\AuthServiceProvider",
                "FluxErp\\Providers\\RouteServiceProvider",
                "FluxErp\\Providers\\EventServiceProvider",
                "FluxErp\\Providers\\BroadcastServiceProvider",
                "FluxErp\\Providers\\FortifyServiceProvider",
                "FluxErp\\Providers\\ViewServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Patrick Weh",
            "email": "40495041+patrickweh@users.noreply.github.com"
        }
    ]
}
