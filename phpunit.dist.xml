<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd"
    bootstrap="./tests/TestCase.php"
    colors="true"
>
    <testsuites>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Livewire">
            <directory suffix="Test.php">./tests/Livewire</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Browser">
            <directory suffix="Test.php">./tests/Browser</directory>
        </testsuite>
    </testsuites>
    <coverage/>
    <php>
        <ini name="memory_limit" value="10G"/>
        <server name="APP_URL" value=""/>
        <server name="APP_KEY" value="base64:JmJwcdxmKz/kTL2+02xm6q7/sFltCaz0VNRgVQAxjbo="/>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <server name="MAIL_MAILER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
        <server name="SCOUT_DRIVER" value="collection"/>
        <server name="BROADCAST_DRIVER" value="log"/>
        <server name="DB_USERNAME" value="root"/>
        <server name="GOTENBERG_HOST" value="http://localhost"/>
    </php>
    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
        <exclude>
            <directory suffix=".php">./src/View</directory>
        </exclude>
    </source>
</phpunit>
